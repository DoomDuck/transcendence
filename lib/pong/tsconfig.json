{
  "compilerOptions": {
    "types": [ "node" ],
    "outDir": "build",
    
    "target": "es2017",
    "module": "commonjs",

    "declaration": true,
    "importsNotUsedAsValues": "remove",
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
  	"strictPropertyInitialization": true,

    "baseUrl": ".",
  },

  "include": ["**/*.ts"],
  "exclude": ["build"]
}
